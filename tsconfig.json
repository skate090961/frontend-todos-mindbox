{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "ES2021",
        "jsx": "react-jsx",
        "allowJs": true,
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "lib": ["ES2021", "DOM", "DOM.Iterable"],
        "skipLibCheck": true,
        "types": ["vite/client"]
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS",
            "target": "ES2021"
        }
    },
    "include": [
        "./config/jest/setupTests.ts",
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    "exclude": ["node_modules"]
}
